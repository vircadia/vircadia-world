{$CADDY_DOMAIN_API} {
  {$CADDY_TLS_API}
  encode zstd gzip

  # Proxy all API traffic to the API manager service
  reverse_proxy http://{$CADDY_UPSTREAM_API}
}

{$CADDY_DOMAIN_APP} {
  {$CADDY_TLS_APP}
  encode zstd gzip

  # Proxy app traffic to the prod web server container
  reverse_proxy http://{$CADDY_UPSTREAM_APP}
}
