{
  "name": "vircadia-world-server",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "bun run --watch server.ts",
    "dev-debug": "VIRCADIA_WORLD_SERVER_DEBUG=true bun run --watch server.ts",
    "test": "bun test",
    "start": "bun run server.ts",
    "build": "bun build server.ts --outfile=server",
    "services:up": "bun run container/docker/docker_cli.ts up",
    "services:down": "bun run container/docker/docker_cli.ts down",
    "services:db:soft-reset": "bun run container/docker/docker_cli.ts db:soft-reset",
    "services:db:migrate": "bun run container/docker/docker_cli.ts db:migrate",
    "services:db:connection-string": "bun run container/docker/docker_cli.ts db:connection-string",
    "services:restart": "bun run container/docker/docker_cli.ts restart",
    "services:rebuild-container": "bun run container/docker/docker_cli.ts rebuild-container",
    "services:pgweb:access-command": "bun run container/docker/docker_cli.ts pgweb:access-command",
    "services:admin:token": "bun run container/docker/docker_cli.ts admin:token"
  },
  "dependencies": {
    "@babylonjs/core": "^7.44.0",
    "eight-colors": "^1.3.1",
    "hono": "^4.6.17",
    "jsonwebtoken": "^9.0.2",
    "postgres": "^3.4.5",
    "tmp": "^0.2.3",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "latest",
    "@types/tmp": "latest",
    "@types/jsonwebtoken": "latest"
  },
  "module": "index.ts",
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
