{
    "name": "world-api-rest-auth-manager",
    "version": "1.0.0",
    "description": "Vircadia World API REST Auth Manager",
    "main": "dist/world.api.rest.auth.manager.js",
    "dependencies": {
        "@azure/msal-node": "catalog:auth-server",
        "jsonwebtoken": "catalog:",
        "postgres": "catalog:",
        "zod": "catalog:"
    },
    "devDependencies": {
        "@types/jsonwebtoken": "catalog:types",
        "@types/bun": "catalog:types",
        "@types/node": "catalog:types"
    },
    "scripts": {
        "build": "bun build world.api.rest.auth.manager.ts --target bun --outfile ./dist/world.api.rest.auth.manager.js",
        "start": "bun ./dist/world.api.rest.auth.manager.js",
        "deploy": "bun run build && bun run start",
        "dev": "bun --watch ./world.api.rest.auth.manager.ts"
    }
}