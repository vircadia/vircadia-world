{
    "name": "vircadia-world-cli",
    "version": "1.0.0",
    "type": "module",
    "scripts": {
        "cli": "bun vircadia.cli.ts",
        "init": "bun run cli init",
        "init:core": "bun run cli init --core",
        "up": "bun run cli core up -d",
        "down": "bun run cli all down",
        "restart": "bun run cli core restart",
        "health": "bun run cli all health",
        "logs": "bun run cli core logs --follow",
        "clean": "bun run cli all clean",
        "clean:deps": "bun run cli all uninstall",
        "install": "bun run cli all install",
        "build": "echo 'CLI does not require a build step'",
        "dev": "bun run cli client dev",
        "dev:local": "bun run cli client dev --local",
        "db:migrate": "bun run cli db migrate",
        "db:seed": "bun run cli db seed",
        "db:backup": "bun run cli db backup",
        "db:restore": "bun run cli db restore",
        "db:token": "bun run cli db token",
        "config": "bun run cli config",
        "test": "bun run cli test"
    },
    "dependencies": {
        "@babylonjs/core": "catalog:babylon",
        "@babylonjs/inspector": "catalog:babylon",
        "@babylonjs/loaders": "catalog:babylon",
        "@inquirer/prompts": "catalog:cli",
        "cross-env": "catalog:cli",
        "dotenv": "catalog:cli",
        "jsonwebtoken": "catalog:",
        "playwright": "catalog:dev",
        "postgres": "catalog:",
        "rimraf": "catalog:cli",
        "zod": "catalog:"
    },
    "devDependencies": {
        "@types/bun": "catalog:types",
        "@types/jsonwebtoken": "catalog:types",
        "@types/node": "catalog:types"
    },
    "engines": {
        "bun": ">=1.2.18"
    },
    "module": "index.ts",
    "peerDependencies": {
        "typescript": "^5.0.0"
    }
}