{
  "name": "vircadia-world-server",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "bun run --watch server.ts",
    "dev-debug": "VIRCADIA_WORLD_SERVER_DEBUG=true bun run --watch server.ts",
    "test": "bun test",
    "start": "bun run server.ts",
    "build": "bun build server.ts --outfile=server",
    "db:up": "bun run database/postgres/postgres_cli.ts up",
    "db:down": "bun run database/postgres/postgres_cli.ts down",
    "db:soft-reset": "bun run database/postgres/postgres_cli.ts soft-reset",
    "db:hard-reset": "bun run database/postgres/postgres_cli.ts hard-reset",
    "db:health": "bun run database/postgres/postgres_cli.ts health",
    "db:connection-string": "bun run database/postgres/postgres_cli.ts connection-string",
    "db:restart": "bun run database/postgres/postgres_cli.ts restart"
  },
  "dependencies": {
    "@babylonjs/core": "^7.37.0",
    "eight-colors": "^1.3.1",
    "hono": "^4.6.12",
    "postgres": "^3.4.5",
    "tmp": "^0.2.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "latest",
    "@types/tmp": "latest"
  },
  "module": "index.ts",
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
